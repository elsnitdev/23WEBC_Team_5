@model List<core_w1.Models.User>

@{
}
@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Password</th>
                <th>RoleId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model) // Đây chính là vòng lặp foreach
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Password</td>
                    <td>@user.RoleId</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Not Found.</p>
}