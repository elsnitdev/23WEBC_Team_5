@* // KhoaTr - 10/16/2025: Refactored image upload with hidden previews until upload, balanced columns *@
@using core_website.Models
@model SanPhamViewModel
@{
    ViewData["PageTitle"] = "Thêm Sản Phẩm Mới";
}
<div class="container mt-4">
    <div class="alert" id="formMessage" style="display: none;"></div>
    <form method="post" enctype="multipart/form-data" id="productForm">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TenSP" class="control-label"></label>
                    <input asp-for="TenSP" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="TenSP" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập đơn giá (VNĐ)" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="KhuyenMai" class="control-label"></label>
                    <input asp-for="KhuyenMai" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập giá khuyến mãi (VNĐ, nếu có)" />
                    <span asp-validation-for="KhuyenMai" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" type="number" min="0" placeholder="Nhập số lượng" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Tag" class="control-label"></label>
                    <input asp-for="Tag" class="form-control" placeholder="Nhập tag (ví dụ: điện tử, laptop, mới)" />
                    <span asp-validation-for="Tag" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="DanhMucId" class="control-label">Danh Mục</label>
                    <select asp-for="DanhMucId" class="form-control" asp-items="@Model.DanhMucList">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="DanhMucId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="NewDanhMucName" class="control-label">Hoặc nhập danh mục mới</label>
                    <input asp-for="NewDanhMucName" class="form-control" placeholder="Nhập tên danh mục mới (nếu cần)" />
                    <span asp-validation-for="NewDanhMucName" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="control-label"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ThongSo" class="control-label"></label>
                    <textarea asp-for="ThongSo" class="form-control" rows="3" placeholder="Nhập thông số kỹ thuật"></textarea>
                    <span asp-validation-for="ThongSo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label class="control-label">Tải ảnh Thumbnail</label>
                    <div class="image-preview"
                      style="width: 200px; height: 200px; border: 1px solid #ddd; margin-bottom: 10px; display: none; align-items: center; justify-content: center; background: #f8f8f8; overflow: hidden;">
                    </div>
                    <input type="file" name="HinhAnhThumbnail" class="form-control" accept="image/png,image/jpeg,image/gif" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                     <label class="control-label">Tải ảnh Chi Tiết</label>
                    <div class="image-preview"
                         style="width: 200px; height: 200px; border: 1px solid #ddd; margin-bottom: 10px; display: none; align-items: center; justify-content: center; background: #f8f8f8; overflow: hidden;">
                    </div>
                     <input type="file" name="HinhAnhDetails" class="form-control" accept="image/png,image/jpeg,image/gif" multiple />
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
            <a asp-action="Index" asp-controller="Products" asp-area="Admins" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            // Disable select if NewDanhMucName has data
            $('#NewDanhMucName').on('input', function () {
                if ($(this).val().trim() !== '') {
                    $('#DanhMucId').val('');
                    $('#DanhMucId').prop('disabled', true);
                } else {
                    $('#DanhMucId').prop('disabled', false);
                }
            });
            // Disable NewDanhMucName input if a category is selected
            $('#DanhMucId').on('change', function () {
                if ($(this).val()) {
                    $('#NewDanhMucName').val('');
                    $('#NewDanhMucName').prop('disabled', true);
                } else {
                    $('#NewDanhMucName').prop('disabled', false);
                }
            });

            // Hàm tạo container và in hình vào trong container đó
            function handleImagePreview(event, previewSize) {
                const files = event.target.files;
                const $previewContainer = $(event.target).prev('.image-preview');

                $previewContainer.empty();

                if (files.length === 0) {
                    $previewContainer.hide();
                    return;
                }

                if (files.length > 1) {
                    $previewContainer.css({
                        'display': 'flex',
                        'flex-wrap': 'wrap',
                        'gap': '10px',
                        'width': 'auto',
                        'height': 'auto',
                        'padding': '5px'
                    }).show();
                } else {
                    $previewContainer.css({
                        'display': 'flex',
                        'flex-wrap': 'nowrap',
                        'gap': '0',
                        'width': `${previewSize}px`,
                        'height': `${previewSize}px`,
                        'padding': '0'
                    }).show();
                }

                Array.from(files).forEach(file => {
                    const reader = new FileReader();

                    const $imageWrapper = $('<div>').css({
                        'width': `${previewSize}px`,
                        'height': `${previewSize}px`,
                        'border': '1px solid #ddd',
                        'display': 'flex',
                        'align-items': 'center',
                        'justify-content': 'center',
                        'background': '#f8f8f8',
                        'overflow': 'hidden'
                    });

                    reader.onload = function (e) {
                        const $img = $('<img>').attr('src', e.target.result).css({
                            'width': '100%',
                            'height': '100%',
                            'object-fit': 'contain'
                        });
                        $imageWrapper.html($img);
                        $previewContainer.append($imageWrapper);
                    };
                    reader.readAsDataURL(file);
                });
            }

            // Xử lý upload hình tạo preview
            $('input[type="file"]').on('change', function (e) {
                handleImagePreview(e, 200);
            });

            // Form submission
            $('#productForm').on('submit', function (event) {
                event.preventDefault();
                var $form = $(this);
                var formData = new FormData($form[0]);
                var $formMessage = $('#formMessage');
                var newDanhMucName = $('#NewDanhMucName').val().trim();
                var danhMucId = $('#DanhMucId').val();

				// Clear previous messages
				$formMessage.hide().removeClass('alert-success alert-danger').text('');

                // Get images
                var thumbnailFile = $('input[name="HinhAnhThumbnail"]')[0].files[0];
                var detailFiles = $('input[name="HinhAnhDetails"]')[0].files;

                // Validate thumbnail
                if (!thumbnailFile) {
                    $formMessage
                        .removeClass('alert-success')
                        .addClass('alert-danger')
                        .text('Vui lòng chọn ít nhất một ảnh thumbnail.')
                        .show();
                    return;
                }

                var imageList = [thumbnailFile, ...detailFiles];

                // Append all images under "HinhAnh" key
                imageList.forEach(file => {
                    formData.append('HinhAnh', file);
                });

                // Function to post product and categorize
                function postProduct(MaDM) {
                    if (MaDM) {
                        formData.set('DanhMucId', MaDM);
                    } else {
                        formData.delete('DanhMucId');
                    }
                    $.ajax({
                        url: '/api/Products',
                        type: 'POST',
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function () {
                            $formMessage
                                .removeClass('alert-danger')
                                .addClass('alert-success')
                                .text('Sản phẩm đã được thêm thành công!')
                                .show();
                            $form[0].reset();
                            $('#DanhMucId').val('');
                        },
                        error: function (xhr) {
                            $formMessage.removeClass('alert-success').addClass('alert-danger').show();
                            if (xhr.status === 400 && xhr.responseJSON && xhr.responseJSON.errors) {
                                var errorMessages = Object.entries(xhr.responseJSON.errors)
                                    .map(([key, messages]) => `${key}: ${messages.join(', ')}`)
                                    .join('; ');
                                $formMessage.text(`Lỗi: ${errorMessages}`);
                            } else {
                                var errorText = xhr.responseJSON && xhr.responseJSON.message
                                    ? xhr.responseJSON.message
                                    : 'Đã xảy ra lỗi khi thêm sản phẩm.';
                                $formMessage.text(errorText);
                            }
                        }
                    });
                }
                // Check if NewDanhMucName is filled
                if (newDanhMucName !== '') {
                    $.ajax({
                        url: '/api/Categories',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({ TenDM: newDanhMucName }),
                        success: function (response) {
                            postProduct(response.MaDM);
                        },
                        error: function (xhr) {
                            $formMessage
                                .removeClass('alert-success')
                                .addClass('alert-danger')
                                .text('Lỗi khi tạo danh mục mới: ' + (xhr.responseJSON?.message || xhr.statusText))
                                .show();
                        }
                    });
                } else if (danhMucId) {
                    postProduct(danhMucId);
                } else {
                    $formMessage
                        .removeClass('alert-success')
                        .addClass('alert-danger')
                        .text('Vui lòng chọn một danh mục hoặc nhập danh mục mới.')
                        .show();
                }
            });
        });
    </script>
}
@* // KhoaTr - END *@