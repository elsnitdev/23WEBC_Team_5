@* // KhoaTr - 5/10/2025: Sửa lại namespace từ core_w2 thành core_website + chỉnh sửa giao diện *@
@using core_website.Models
@model SanPhamViewModel
@{
    ViewData["PageTitle"] = "Thêm Sản Phẩm Mới";
}
<div class="container mt-4">
    <div class="alert" id="formMessage"></div>
    <form method="post" enctype="multipart/form-data" id="productForm">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="TenSP" class="control-label"></label>
                    <input asp-for="TenSP" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="TenSP" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DonGia" class="control-label"></label>
                    <input asp-for="DonGia" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập đơn giá (VNĐ)" />
                    <span asp-validation-for="DonGia" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="KhuyenMai" class="control-label"></label>
                    <input asp-for="KhuyenMai" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập giá khuyến mãi (VNĐ, nếu có)" />
                    <span asp-validation-for="KhuyenMai" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" type="number" min="0" placeholder="Nhập số lượng" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                @* Nếu chọn danh mục từ danh sách có sẵn sẽ lấy giá trị từ option value*@
                <div class="form-group mb-3">
                    <label asp-for="DanhMucId" class="control-label">Danh Mục</label>
                    <select asp-for="DanhMucId" class="form-control" asp-items="@Model.DanhMucList">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="DanhMucId" class="text-danger"></span>
                </div>
                @* Nhập danh mục mới sẽ tạo danh mục mới cho sản phẩm cho dù đã chọn danh mục từ ô select trên*@
                @* Để chọn lại danh mục từ danh sách thì cần xóa sạch giá trị trong ô danh mục mới *@
                <div class="form-group mb-3">
                    <label asp-for="NewDanhMucName" class="control-label">Hoặc nhập danh mục mới</label>
                    <input asp-for="NewDanhMucName" class="form-control" placeholder="Nhập tên danh mục mới (nếu cần)" />
                    <span asp-validation-for="NewDanhMucName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="HinhAnh" class="control-label"></label>
                    <input asp-for="HinhAnh" type="file" class="form-control" accept="image/png,image/jpeg,image/gif" multiple />
                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Tag" class="control-label"></label>
                    <input asp-for="Tag" class="form-control" placeholder="Nhập tag (ví dụ: điện tử, laptop, mới)" />
                    <span asp-validation-for="Tag" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="MoTa" class="control-label"></label>
                    <textarea asp-for="MoTa" class="form-control" rows="5" placeholder="Nhập mô tả sản phẩm"></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ThongSo" class="control-label"></label>
                    <textarea asp-for="ThongSo" class="form-control" rows="5" placeholder="Nhập thông số kỹ thuật"></textarea>
                    <span asp-validation-for="ThongSo" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
            <a asp-action="Index" asp-controller="Products" asp-area="Admins" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productForm').on('submit', function (event) {
                event.preventDefault();

                var $form = $(this);
                var formData = new FormData($form[0]);
                var $formMessage = $('#formMessage');

                $.ajax({
                    url: '/api/Products',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        $formMessage
                            .removeClass('alert-danger')
                            .addClass('alert-success')
                            .text('Sản phẩm đã được thêm thành công!')
                            .show();
                        $form[0].reset();
                    },
                    error: function (xhr) {
                        $formMessage.removeClass('alert-success').addClass('alert-danger').show();
                        if (xhr.status === 400 && xhr.responseJSON && xhr.responseJSON.errors) {
                            var errorMessages = Object.entries(xhr.responseJSON.errors)
                                .map(([key, messages]) => `${key}: ${messages.join(', ')}`)
                                .join('; ');
                            $formMessage.text(`Lỗi: ${errorMessages}`);
                        } else {
                            var errorText = xhr.responseJSON && xhr.responseJSON.message
                                ? xhr.responseJSON.message
                                : 'Đã xảy ra lỗi khi thêm sản phẩm.';
                            $formMessage.text(errorText);
                        }
                    }
                });
            });
        });
    </script>
}
@* // KhoaTr - END *@