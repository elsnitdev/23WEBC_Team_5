@model LoginViewModel
@{
    Layout = "_AuthLayout";
}
<div class="row">
    <div class="col-xs-12 col-md-6 col-lg-4 center-block" style="float: none;">
        <div class="panel panel-default">
            <div class="panel-body">
                <h2 class="text-center" style="margin-bottom: 20px; font-weight: bold; color: #337ab7;">Login</h2>
                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="TenND" class="control-label">Tên đăng nhập</label>
                        <input asp-for="TenND" class="form-control input-lg" placeholder="Nhập tên đăng nhập" required />
                        <span asp-validation-for="TenND" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatKhau" class="control-label">Mật khẩu</label>
                        <input asp-for="MatKhau" type="password" class="form-control input-lg" placeholder="Nhập mật khẩu" required />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>